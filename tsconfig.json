{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./tools/typings"],
    "types": ["node", "marked", "glob", "tmp"]
  },
  "include": ["tools/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}